<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.android.stockmanagement.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.40"
                android:id="@+id/dealerOption">

                <ImageButton
                    android:id="@+id/im1"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/round"
                    android:src="@drawable/deall"
                    app:srcCompat="@drawable/deall" />

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="31dp"
                    android:layout_marginStart="31dp"
                    android:layout_toEndOf="@+id/im1"
                    android:layout_toRightOf="@+id/im1"
                    android:text="   DEALER"
                    android:textSize="30dp"
                    android:textColor="@color/Login_text_color"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:id="@+id/buyerOption">

                <ImageButton
                    android:id="@+id/im2"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/round1"
                    android:src="@drawable/buyerr" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_toEndOf="@+id/im2"
                    android:layout_toRightOf="@+id/im2"
                    android:text="   BUYER"
                    android:textColor="@color/Login_text_color"
                    android:textSize="30dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:id="@+id/productOption">

                <ImageButton
                    android:id="@+id/im3"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/round2"
                    android:src="@drawable/prod"
                    android:elevation="8dp"/>

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="31dp"
                    android:layout_marginStart="31dp"
                    android:layout_toEndOf="@+id/im3"
                    android:layout_toRightOf="@+id/im3"
                    android:elevation="8dp"
                    android:text="   PRODUCTS"
                    android:textSize="30dp"
                    android:textColor="@color/Login_text_color"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.35"
                android:id="@+id/saleOption"
                >

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/my_shape"
                    android:scaleType="center"
                    android:src="@drawable/sale" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="26dp"
                    android:text="SALES"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textColor="@color/Login_text_color"/>
            </RelativeLayout>
        </LinearLayout>
</android.support.constraint.ConstraintLayout>

