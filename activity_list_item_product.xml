<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.stockmanagement.List_item_product">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp" >

        <TextView
            android:id="@+id/txt_Product_Type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Product Name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txt_Product_Type"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Quantity"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/txt_costPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txt_Commission"
            android:autoLink="web"
            android:linksClickable="false"
            android:text="Cost Price"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/txt_Commission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_salary"
            android:layout_alignStart="@+id/txt_salary"
            android:layout_below="@+id/txt_company_name"
            android:autoLink="phone"
            android:linksClickable="false"
            android:text="Commission"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/txt_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txt_quantity"
            android:text="Dealer"
            android:textColor="@android:color/darker_gray" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
